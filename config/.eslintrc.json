{
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:jest/recommended"
	],
	"plugins": [
		"@typescript-eslint",
		"promise",
		"import",
		"node",
		"jest"
	],
	"rules": {
		"no-console": "warn",
		"no-debugger": "warn",
		"space-before-function-paren": "warn",
		"comma-dangle": [
			"warn",
			"always-multiline"
		],
		"quotes": [
			"warn",
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"strict": [
			"error",
			"global"
		],
		"eqeqeq": "warn",
		"semi": [
			"warn",
			"always",
			{
				"omitLastInOneLineBlock": true
			}
		],
		"no-template-curly-in-string": "warn",
		"indent": "off",
		"@typescript-eslint/indent": [
			"warn",
			"tab"
		],
		"no-tabs": [
			"warn",
			{
				"allowIndentationTabs": true
			}
		],
		"no-unneeded-ternary": [
			"warn"
		],
		"linebreak-style": [
			"warn",
			"unix"
		],
		"arrow-parens": [
			"warn",
			"always"
		],
		"no-unused-vars": [
			"warn"
		],
		"@typescript-eslint/ban-ts-comment": "warn",
		"import/extensions": [
			"warn",
			"ignorePackages",
			{
				"vue": "always"
			}
		]
	},
	"env": {
		"node": true,
		"es2020": true
	},
	"parserOptions": {
		"sourceType": "module",
		"parser": "@typescript-eslint/parser"
	},
	"overrides": [
		{
			"files": [
				"*.ts"
			],
			"rules": {
				"no-unused-vars": "off"
			}
		},
		{
			"files": [
				"*.cjs"
			],
			"rules": {
				"@typescript-eslint/explicit-module-boundary-types": "off",
				"@typescript-eslint/no-unused-vars": "off",
				"@typescript-eslint/no-var-requires": "off",
				"strict": "off"
			},
			"parserOptions": {
				"sourceType": "script"
			}
		}
	]
}
